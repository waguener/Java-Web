<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">postgres</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/aulasHibernate</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>

	<mapping class="aulas.hibernate.modelo.Cliente"/> 
	<mapping class="aulas.hibernate.modelo.Funcionario"/>
	<mapping class="aulas.hibernate.modelo.VagasEstacionamento"/>
	<mapping class="aulas.hibernate.modelo.Telefone"/>
	<mapping class="aulas.hibernate.modelo.Projeto"/>
	<mapping class="aulas.hibernate.modelo.Departamento"/>
	<mapping class="aulas.hibernate.modelo.Veiculo"/>
	<mapping class="aulas.hibernate.modelo.Carro"/>
	<mapping class="aulas.hibernate.modelo.Moto"/>
	</session-factory>
</hibernate-configuration>